<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:background="#0000ff"
                    android:layout_height="400dip"
                    android:layout_width="fill_parent">
        <TextView
                android:id="@+id/blue_title"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:text="Ficha"
                />
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:background="#00ff00"
                        android:id="@+id/green_view"
                        android:layout_below="@id/blue_title"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:orientation="horizontal">
            <ImageView
                    android:id="@+id/image"
                    android:maxHeight="70dip"
                    android:maxWidth="70dip"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/dopaje"
                    />
            <TextView
                    android:id="@+id/green_title"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/image"
                    android:layout_width="fill_parent"
                    android:text="Título"
                    android:textColor="#000000"
                    />
            <TextView
                    android:gravity="center"
                    android:layout_below="@id/green_title"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/image"
                    android:layout_width="fill_parent"
                    android:text="Esta es la descripción que va debajo del texto"
                    android:textColor="#000000"
                    />
        </RelativeLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:background="#00ffff"
                      android:id="@+id/buttons_view"
                      android:layout_below="@id/green_view"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:orientation="vertical">
            <Button
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:layout_width="wrap_content"
                    android:text="Botón 1"
                    />
            <Button
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:layout_width="wrap_content"
                    android:text="Botón 2"
                    />
            <Button
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:layout_width="wrap_content"
                    android:text="Botón 3"
                    />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:background="#000000"
                      android:layout_below="@id/green_view"
                      android:layout_height="fill_parent"
                      android:layout_toRightOf="@id/buttons_view"
                      android:layout_width="fill_parent"
                      android:orientation="vertical">
            <TextView
                    android:id="@+id/map"
                    android:layout_gravity="center"
                    android:layout_margin="10dip"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Esto debería ser el mapa pero no encuentro ese tipo de vista"
                    android:textColor="#ffffff"
                    />
            <Button
                    android:id="@+id/map_button"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:layout_width="wrap_content"
                    android:text="Botón del mapa"
                    />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>